<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.DetailsActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@android:color/darker_gray"
            android:padding="40dp"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/iv_image_detail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv_title"
            android:contentDescription="@string/poster_path"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/tv_releaseDate"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@id/tv_title"
            android:layout_toEndOf="@id/iv_image_detail"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_voteAverage"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_releaseDate"
            android:layout_toEndOf="@id/iv_image_detail"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_overView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image_detail"
            android:layout_margin="5dp"
            android:textSize="15sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_overView"/>

        <TextView
            android:layout_below="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Trailers"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_trailerRecyclerView"
            android:layout_below="@id/view"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</ScrollView>